@model StudentsAddViewmodel
<h1>Add</h1>

<form asp-controller="Students"
      asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control"/>
        <span asp-validation-for="FirstName" class="text-danger"></span> 
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        @for (int i = 0; i < Model.Courses.Count(); i++)
        {
            <input asp-for="@Model.Courses[i].IsSelected" />
            <label asp-for="@Model.Courses[i].IsSelected">
                @Model.Courses[i].Text
            </label>
            <input asp-for="@Model.Courses[i].Text" />
            <input asp-for="@Model.Courses[i].Value" />
        }
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

